<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <title>Bilancia Digitale Web</title>
    <style>
        #weighingArea {
            width: 300px;
            height: 200px;
            background-color: #f0f0f0;
            border: 2px solid black;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 24px;
        }
    </style>
</head>
<body>
    <div id="weighingArea">
        Posiziona l'oggetto qui
    </div>
    <div id="result">Peso: 0 grammi</div>

    <script>
        const weighingArea = document.getElementById('weighingArea');
        const resultDisplay = document.getElementById('result');

        // Evento di pressione
        weighingArea.addEventListener('touchstart', calculateWeight);
        weighingArea.addEventListener('touchmove', calculateWeight);
        weighingArea.addEventListener('touchend', resetWeight);

        function calculateWeight(event) {
            // Calcolo del peso basato sulla pressione del touch
            const pressure = event.touches[0].force; // Forza del tocco
            const estimatedWeight = pressure * 1000; // Conversione in grammi

            resultDisplay.textContent = `Peso: ${estimatedWeight.toFixed(2)} grammi`;
        }

        function resetWeight() {
            resultDisplay.textContent = 'Peso: 0 grammi';
        }
    </script>
</body>
</html>
